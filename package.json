{
  "name": "predict-win-lottery",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend",
    "dev:all": "concurrently \"npm run dev --workspace=backend\" \"npm run start --workspace=user-app\" \"npm run start --workspace=admin-app\"",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "db:migrate": "npm run migrate --workspace=backend",
    "db:seed": "npm run seed --workspace=backend",
    "build": "npm run build --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
